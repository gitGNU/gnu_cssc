#! /bin/sh

VALGRIND="@VALGRIND@"
prefix=""

if test -n "$VALGRIND"; then
   if test -z "$CSSC_DISABLE_VALGRIND"; then
      prefix="$VALGRIND"
   fi
fi

# Turn off core dumps.
ulimit -c 0

$prefix "$@"
rv=$?

if [ $rv -ne 10 ]; then
    # No need to retain the core file for diagnosis.
    rm -f vgcore.*
fi
exit $rv